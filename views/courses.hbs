<h1>{{ title }}</h1>

{{#if courses.length}}
    {{#each courses}}
        <div class="row">
            <div class="col s6 offset-s3">
            <div class="card">
                <div class="card-image">
                    <img src="{{image}}">
                </div>
                <div class="card-content">
                    <h3 class="card-title">{{title}}</h3>
                    <p class="price">{{price}}</p>
                </div>
                <div class="card-action controls">
                    <a href="courses/{{id}}" target="_blank">Open course</a>
                    {{#if @root.isAuth}}
                        {{#ifEquals @root.userId user._id}}
                            <a href="courses/{{id}}/edit?allow=true">Edit course</a>
                        {{/ifEquals}}
                        <form action="/card/add" method="post">
                            <input type="hidden" name="id" value="{{id}}"/>
                            <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                            <button class="btn btn-primary">Add card</button>
                        </form>
                    {{/if}}
                </div>
            </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>Curses not found</p>
{{/if}}