<h1>{{ title }}</h1>

{{#if error}}
    <div class="auth__error">{{error}}</div>
{{/if}}

<form action="/courses/edit" method="POST" class="edit-form">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <div class="row">
        <div class="input-field col s6">
            <input placeholder="Name" name="title" id="name" type="text" class="validate" required value="{{course.title}}">
            <label for="name">Name</label>
            <span class="helper-text" data-error="Input Name"></span>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s6">
            <input placeholder="Price" name="price" id="price" type="number" class="validate" required value="{{course.price}}">
            <label for="name">Price</label>
            <span class="helper-text" data-error="Input price"></span>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s6">
            <input placeholder="Image" name="image" id="image" type="text" class="validate" required value="{{course.image}}">
            <label for="image">Url image</label>
            <span class="helper-text" data-error="Input url image"></span>
        </div>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">
    
    <button class="btn btn-primary">Edit course</button>
</form>
<form action="/courses/remove" method="post">
    <input type="hidden" value="{{course.id}}" name="id">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button type="submit" class="btn red btn-primary">Delete course</button>
</form>
